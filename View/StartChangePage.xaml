<Page x:Class="RieltorApp.View.StartChangePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RieltorApp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добро пожаловать!&#10;С чем работать?">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" FontSize="45" FontWeight="Bold" Style="{StaticResource TransparentStyle}"   >
            <TextBlock TextWrapping="Wrap" TextAlignment="Center">Избранное</TextBlock>
        </Button>
        <Button Grid.Row="1" FontSize="45" FontWeight="Bold" Style="{StaticResource TransparentStyle}" Command="{Binding Path=Update}" CommandParameter="{x:Type local:TypeSearchPage}">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center">Поиск недвижимости</TextBlock>
        </Button>
        <Button Grid.Row="2" FontSize="45" FontWeight="Bold" Style="{StaticResource TransparentStyle}" >
            <TextBlock TextWrapping="Wrap" TextAlignment="Center">Автоматический поиск</TextBlock>
        </Button>
    </Grid>
</Page>
