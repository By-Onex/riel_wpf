<Page x:Class="RieltorApp.View.TypeSearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RieltorApp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Выберите тип поиска">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" FontSize="45" FontWeight="Bold" Style="{StaticResource TransparentStyle}"  Command="{Binding Path=OpenArgCommand}" CommandParameter="{x:Type local:SearchArgument}">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center">Аренда</TextBlock>
        </Button>
        <Button Grid.Row="1" FontSize="45" FontWeight="Bold" Style="{StaticResource TransparentStyle}"   >
            <TextBlock TextWrapping="Wrap" TextAlignment="Center">Покупка</TextBlock>
        </Button>
    </Grid>
</Page>
